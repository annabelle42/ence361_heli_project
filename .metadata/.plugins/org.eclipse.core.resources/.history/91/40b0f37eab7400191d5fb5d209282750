#include "altitude.h"
#include "yaw.h"
#include "kernel.h"

void checkForAltitudeInput ()
{
    upButState = checkButton (UP);
    downButState = checkButton (DOWN);

    if (upButState)
    {
        if (currentAltitude < 100)
        {
            currentAltitude += 10;
        }
    }

    if (downButState)
    {
        if (currentAltitude > 0)
        {
            currentAltitude -= 10;
        }
    }
}
