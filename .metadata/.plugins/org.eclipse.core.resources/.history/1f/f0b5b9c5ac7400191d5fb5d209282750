#include "circBufT.h"
#include "OrbitOLED/OrbitOLEDInterface.h"
#include "buttons4.h"
#include "display.h"
#include "altitude.h"
#include "yaw.h"
#include "kernel.h"
#include "control.h"

int upButState, downButState, leftButState, rightButState;

void checkForAltitudeInput ()
{
    upButState = checkButton (UP);
    downButState = checkButton (DOWN);

    if (upButState)
    {
        if (desiredAltitude < 100)
        {
            desiredAltitude += 10;
        }
    }

    if (downButState)
    {
        if (desiredAltitude > 0)
        {
            desiredAltitude -= 10;
        }
    }
}

void checkForYawInput ()
{
    leftButState = checkButton (LEFT);
    rightButState = checkButton (RIGHT);

    if (rightButState)
    {
        if (currentYaw < 100)
        {
            currentYaw += 10;
        }
    }

    if (leftButState)
    {
        if (currentYaw > 0)
        {
            currentYaw -= 10;
        }
    }
}
